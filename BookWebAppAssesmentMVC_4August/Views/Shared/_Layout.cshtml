<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookWebAppAssesmentMVC_4August</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookWebAppAssesmentMVC_4August.styles.css" asp-append-version="true" />
</head>
<style>
    body{
        background-color:lightcoral
    }
    nav{
        background-color:aqua
    }
   


</style>
<body>
    <header >
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-aqua border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="logo">
        <a href="index.html"><img src="https://t3.ftcdn.net/jpg/04/39/10/86/240_F_439108683_GVr9zCKSH5FceoKxqFe0KiQ4KtRpFx1M.jpg" width="150" height="70"> </a>
        </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                      
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">ListOfbooks</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Cart">Cart</a>
                        </li>
                    </ul>
           
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-black h-40" >
        <div class="container">
            &copy; 2022 - By Swati
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
